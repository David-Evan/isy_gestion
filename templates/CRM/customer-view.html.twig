{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} | CRM/Client{% endblock %}

{% block body %}
<div class="page-profile" style="background-image: url(assets/images/user_images/user_image_2.jpg);">
                            
    <div class="profile profile-transparent">
        <div class="profile-image">
            <img src="assets/images/users/user_default.png">
        </div>
        <div class="profile-info">
            <h4>{{Customer.name}}</h4>
            <span><i class="fa fa-map-marker"></i> {{Customer.Address.street}}, {{Customer.Address.city}}</span>
        </div>                            
    </div>
    
    <div class="page-profile-stats">
        <div class="page-profile-stats-left">
            <div class="pull-right">
                <div class="page-profile-stats-count">
                    <i class="fas fa-long-arrow-alt-up growth-increase"></i>
                    Facturation sur l'année
                    <span>14 522 €</span>
                </div>
            </div>
        </div>
        <div class="page-profile-stats-right">
            <div class="pull-left">
                <div class="page-profile-stats-count">
                    Négociation en cours
                    <span>2 251 €</span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="wrapper">
    <div class="row">
        <div class="col-md-3">
            {% include "CRM/partial/_sidebar-customer.html.twig" %}
        </div>
        <div class="col-md-9">
            <!-- Timeline -->
            <div class="timeline">  
                
            {% for Event in Events %}
                {% if Event.type.color is empty %}
                    <div class="timeline-item {% if loop.index is even %}timeline-item-even{% endif %}">
                {% else %}
                    <div class="timeline-item timeline-item-{{Event.type.color}} {% if loop.index is even %}timeline-item-even{% endif %}">
                {% endif %}
                    <div class="timeline-item-date">{{Event.dateCreate|ago}}</div>

                    <div class="timeline-item-icon"><i class="fa fa-{{Event.type.icon}}"></i></div>

                    <div class="timeline-item-data">
                        <h5>{{Event.type.UITitle}}</h5>
                        {{Event.type.UISubtitle|raw}}
                        <p>{{Event.Description|raw}}</p>
                        {{Event.type.UIButton(Event.additionalInformation)|raw}}
                    </div>  
                </div>  
                {% endfor %}
            </div>                           
            <!-- ./ Timeline-->
        </div>
    </div>
</div>
{% endblock %}
